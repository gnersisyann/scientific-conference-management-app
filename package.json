{
  "name": "sconfmanagement",
  "version": "1.0.0",
  "description": "Full-stack conference management system built with Nuxt, Hono, Prisma, and PostgreSQL. Created as part of a database course project.",
  "scripts": {
    "dev": "pnpm --filter \"./apps/**\" dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm --filter \"./apps/**\" build",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "start": "pnpm --filter \"./apps/**\" start",
    "lint": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" lint",
    "test": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" test",
    "clean": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" clean && rm -rf node_modules"
  },
  "author": "@gnersisyann",
  "type": "module",
  "private": true,
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
